<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium"
    tools:context="com.example.joegl.myezresume.MainActivity">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/user_name_layout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/user_picture"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/spacing_xsmall">

            <TextView
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Joe Liao"
                android:textSize="@dimen/caption_text_size"/>

            <ImageButton
                android:id="@+id/edit_basic_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_xsmall"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/edit_basic_info"
                android:src="@drawable/ic_mode_edit_black_18px"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/user_picture"
            android:layout_height="@dimen/user_picture_size"
            android:layout_width="@dimen/user_picture_size"
            android:layout_alignParentRight="true"
            android:src="@drawable/avatar"
            android:contentDescription="@string/user_picture"/>
        <TextView
            android:id="@+id/email"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="joeglancith@hotmail.com"
            android:layout_below="@+id/user_name_layout"
            android:layout_toLeftOf="@+id/user_picture"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_small">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/section_education"
            android:textSize="@dimen/caption_text_size"
            android:textAllCaps="true"/>

        <ImageButton
            android:id="@+id/add_education_button"
            android:layout_height="@dimen/icon_button_size"
            android:layout_width="@dimen/icon_button_size"
            android:src="@drawable/ic_add_black_24px"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/add_education"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="CMU (2015/09 ~ 2016/12)"/>

        <ImageButton
            android:id="@+id/edit_education_btn"
            android:layout_height="@dimen/icon_button_size"
            android:layout_width="@dimen/icon_button_size"
            android:src="@drawable/ic_edit_black_18px"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/edit_education"/>

    </LinearLayout>

    <TextView
        android:id="@+id/education_courses"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="- Database\n- Algorithm\n- Network"/>


</LinearLayout>



